<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="{{ theme_url }}/../shared/img/favicon.ico">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    {% if config.session.theme == "dark" %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style-light.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/nav.css" type="text/css" />
    {% else %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/nav.css" type="text/css" />
    {% endif %}
   

</head>
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
    <header class="site-header">
    <a id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false" tabindex="1">
        <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
        <span class="sr-only">Toggle Menu</span>
    </a>
    <div class="logo" aria-hidden="true">
                    <a href="{{ "index"|link }}">
                        <img class="logoimg" src="{{ base_url }}/{{ pages["_meta"].meta.logo|url }}" alt="" />
                    </a>
    </div>
    <div id="nav" role="navigation" tabindex="-1">
        <ul>
            {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
            <li{% if page.id == current_page.id %} class="active" {% endif %}>
                <h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
                </li>
                {% endfor %}
        </ul>
    </div>
</header>
    <div class="main" id="main" role="main">
        <div class="gallery">
            {% for image in meta.images %}
            <a href="{{ base_url}}/image/{{ image.url }}" target="_blank">
            <div>
            <picture>
            <source media="(min-width: 1000px)" srcset="{{ base_url}}/image/{{ image.url }}&w=350">
            <source media="(min-width: 768px)" srcset="{{ base_url}}/image/{{ image.url }}&w=210">
            <source media="(min-width: 375px)" srcset="{{ base_url}}/image/{{ image.url }}&w=190">
            <img src="{{ base_url}}/image/{{ image.url }}&w=250" alt="{{ image.alt }}">
            </picture>
            </div>
            </a>
            {% endfor %}
        </div>
    </div>
    
    <footer class="site-footer">
        <div class="footer">
        <div class="container">
            <div class="social">
                <!-- Loads from FontAwesome (themes/shared/css/font-awesome.min.css) -->
                {% for social in pages["_meta"].meta.social %}
                    <a href="{{ social.url }}" title="{{ social.title }}" role="button">
                        <i class="{{ social.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ social.title }}</span>
                    </a>
                {% endfor %}
            </div>
            <div class="instagram">
            {% for instagram in pages["_meta"].meta.instagram %}
                <a href="{{ instagram.url }}" title="{{ instagram.title }}" role="button">
                    <i class="{{ instagram.icon }}" aria-hidden="true"></i>
                    <span class="sr-only">{{ instagram.title }}</span>
                </a>
            {% endfor %}
            </div>
            <div class="school">
            {% for school in pages["_meta"].meta.school %}
                <a href="{{ school.url }}" title="{{ school.title }}" role="button">
                    <i class="{{ school.icon }}" aria-hidden="true"></i>
                    <span class="sr-only">{{ school.title }}</span>
                </a>
            {% endfor %}
            </div>
            <div class="football">
            {% for football in pages["_meta"].meta.football %}
                <a href="{{ football.url }}" title="{{ football.title }}" role="button">
                    <i class="{{ football.icon }}" aria-hidden="true"></i>
                    <span class="sr-only">{{ football.title }}</span>
                </a>
            {% endfor %}
            </div>
                

            <p class="footer-text">
                Skapad av Jonatan Pettersson
            </p>
        </div>
    </div>
    </footer>
    <script src="{{ theme_url }}/../shared/js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared/js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared/js/responsive-navbar.js" type="text/javascript"></script>
</body>